# =============================================
# APPLICATION CONFIGURATION
# =============================================
# The port number on which the NestJS server will listen
# Default: 3000
APP_PORT=3000

# =============================================
# DATABASE CONFIGURATION (MySQL with TypeORM)
# =============================================
# Database host - 'localhost' for local development
# In production, use your database server IP or hostname
DB_HOST=localhost

# Database port - MySQL default is 3306
DB_PORT=3306

# Database username - the user that has access to your database
DB_USERNAME=root

# Database password - your MySQL user password
# IMPORTANT: Never commit real passwords to version control!
DB_PASSWORD=your_password_here

# Database name - the name of your MySQL database
# You need to create this database in MySQL before running the app
DB_NAME=nest_learning

# Synchronize database schema automatically
# true = TypeORM will auto-create/update tables based on entities
# WARNING: Set to 'false' in production! It can cause data loss
DB_SYNCHRONIZE=true

# =============================================
# JWT CONFIGURATION (JSON Web Token for Auth)
# =============================================
# Secret key used to sign JWT tokens
# IMPORTANT: Use a long, random string in production
# Generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time
# Examples: '60s', '15m', '1h', '7d'
JWT_EXPIRES_IN=1d

# =============================================
# BCRYPT CONFIGURATION
# =============================================
# Number of salt rounds for password hashing
# Higher = more secure but slower (10-12 is recommended)
BCRYPT_SALT_ROUNDS=10
